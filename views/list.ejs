
<!doctype html>
<html>
<head>
    <title>List</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body        { padding-top:80px; word-wrap:break-word; }
    </style>
</head>
<body>
<div class="container">

<div class="text-center">
        <h1 class="text-success"><span class="fa fa-list-alt"></span> My list </h1>
</div>
    <div class="row">
        <div class="col-sm-8 col-sm-offset-2">
            <form method="post" action="/">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="input-group">
                            <input id="itemName" type="text" name="item_name" class="form-control" placeholder="Product name">
                            <span class="input-group-btn" style="width:120px">
                                <input type="text" name="item_count" class="form-control" placeholder="Product count">
                            </span>
                            <span class="input-group-btn">
                                <button class="btn btn-secondary" type="button"><span class=" glyphicon glyphicon-shopping-cart">+</span></button>
                            </span>
                        </div>
                    </div>
                </div>
            </form>


            <div id="content">
                <% for (keya in items[0]){ %>
                    <%= keya %>
                <%}; %>
                <h3 class="text-primary"> List</h3>
                <ul>
                    <% [].slice.call(items, 0).forEach(function(item) { %>
                    <li><%= item.item_name + "-" + item.item_count %></li>
                    <% }); %> %>
                </ul>



            </div>
        </div>
    </div> </div>
</body>
</html>
